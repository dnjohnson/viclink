{
	"name": "viclink",
	"version": "0.1.0",
	"private": true,
	"main": "./viclink.js",
	"author": {
		"name": "David N. Johnson"
	},
	"dependencies": {
		"ecstatic": "0.4.x",
		"jade": "1.3.x",
		"stylus": "0.43.x",
		"routes": "0.3.x",
		"request": "2.34.x",
		"browserify-shim": "3.4.x"
	},
	"devDependencies": {
		"mocha": "1.18.x",
		"should": "3.3.x"
	},
	"browserify": {
		"transform": [ "browserify-shim" ]
	},
	"browser": {
		"angular": "./app/lib/angular.js",
		"ui.bootstrap": "./app/lib/ui-bootstrap.js"
	},
	"browserify-shim": {
		"angular": {
			"exports": "angular"
		},
		"ui.bootstrap": {
			"depends": [ "angular" ],
			"exports": "uiBootstrap"
		}
	},
	"engines": {
		"node": "0.10.x",
		"npm": "1.4.x"
	},
	"scripts": {
		"start": "node viclink",
		"build": "browserify app/viclink.js | uglifyjs > build/min.js",
		"watch": "watchify app/viclink.js -v -o build/min.js"
	}
}